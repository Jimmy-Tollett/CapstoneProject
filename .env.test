# Test Environment Configuration
# Copy this to .env.test and modify values as needed

# Testing mode flag
TESTING=true

# Database configuration for testing
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/test_flight_data
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=test_flight_data
DATABASE_USER=test_user
DATABASE_PASSWORD=test_password

# API service configuration
API_BASE_URL=http://localhost:8001
API_PORT=8001

# Parser service configuration
PARSER_UDP_PORT=8081
PARSER_HOST=localhost

# Orchestrator configuration
ORCHESTRATOR_PORT=9001
ORCHESTRATOR_HOST=localhost

# Frontend configuration
FRONTEND_URL=http://localhost:3001
FRONTEND_PORT=3001

# WebSocket configuration
WEBSOCKET_URL=ws://localhost:8001/ws

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Test data configuration
TEST_DATA_DIR=./tests/data
SAMPLE_PCAP_FILE=./tests/data/sample_cat21.pcap

# Performance test thresholds
MAX_RESPONSE_TIME_MS=500
MAX_PROCESSING_TIME_MS=100
MAX_MEMORY_USAGE_MB=512

# Browser testing configuration
BROWSER_TIMEOUT_MS=30000
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720

# CI/CD configuration
CI=false
PARALLEL_WORKERS=auto

# Security testing
ENABLE_SECURITY_TESTS=true
TEST_AUTH_TOKEN=test_token_12345